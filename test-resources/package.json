{
    "name": "test-resources",
    "workspaces": [
        "audit-events-test-harness/lambdas",
        "headless-core-stub/lambdas/*"
    ],
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "sam:build": "npm run sam:validate && sam build --template infrastructure/template.yaml --cached --parallel",
        "sam:validate": "cd infrastructure && sam validate && sam validate --lint",
        "test": "npm run unit --",
        "test:integration": "jest --select-projects integration-tests --runInBand",
        "test:coverage": "npm run unit -- --coverage",
        "unit": "export POWERTOOLS_DEV=true && jest --silent --ignore-projects integration-tests",
        "unit:logs": "jest"
    },
    "dependencies": {
        "@aws-lambda-powertools/commons": "2.31.0",
        "@aws-lambda-powertools/logger": "2.31.0",
        "@aws-lambda-powertools/parameters": "2.31.0",
        "@aws-sdk/client-cloudformation": "3.991.0",
        "@aws-sdk/client-kms": "3.991.0",
        "@aws-sdk/client-ssm": "3.991.0",
        "@govuk-one-login/data-vocab": "1.9.3",
        "@govuk-one-login/data-vocab-schemas": "1.9.3",
        "@middy/core": "4.2.8",
        "ajv": "8.17.1",
        "ajv-formats": "3.0.1",
        "aws-sdk-client-mock": "4.1.0",
        "crypto": "1.0.1",
        "ecdsa-sig-formatter": "1.0.11",
        "esbuild": "0.25.1",
        "jose": "5.10.0",
        "uuid": "9.0.1"
    },
    "devDependencies": {
        "@aws-sdk/client-dynamodb": "3.991.0",
        "@aws-sdk/credential-providers": "3.991.0",
        "@aws-sdk/types": "3.973.1",
        "@types/aws-lambda": "^8.10.145",
        "@types/jest": "^29.5.13",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "aws-sigv4-fetch": "4.4.1",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "^29.7.0",
        "prettier": "^3.1.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.2"
    }
}
