{
  "$schema": "https://raw.githubusercontent.com/govuk-one-login/quality-gates/refs/tags/v0.1.0/schemas/schema.json",
  "services": [
    {
      "service-tag": "ipv-cri-oauth-common",
      "quality-gates": [
        {
          "check-types": ["code style and linting", "secret scanning"],
          "config": {
            "file": ".github/workflows/check-repo.yml",
            "name": "pre-commit",
            "path": "jobs.run-pre-commit"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": ["unit"],
          "config": {
            "file": ".github/workflows/check-repo.yml",
            "name": "Run tests",
            "path": "jobs.run-unit-tests"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": ["contract"],
          "config": {
            "file": ".github/workflows/check-repo.yml",
            "name": "Pact tests",
            "path": "jobs.run-contract-tests"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": [
            "code style and linting",
            "unit test coverage",
            "vulnerability detection"
          ],
          "config": {
            "file": ".github/workflows/check-repo.yml",
            "name": "SonarCloud",
            "path": "jobs.sonarcloud"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        },
        {
          "check-types": ["vulnerability detection"],
          "config": {
            "file": ".github/workflows/check-repo.yml",
            "name": "CodeQL",
            "path": "jobs.codeql"
          },
          "phase": "pre-merge",
          "provider": "GitHub"
        }
      ]
    }
  ]
}
